input {
 udp {
  port => 514
  type => "udp"
 }
}

filter {
 grok {
  add_tag => ['syslog']
  match => [ "message", "%{SYSLOG5424PRI:Priority} (?:%{TIMESTAMP_ISO8601:syslog5424_ts}|-) (?:%{HOSTNAME:syslog5424_host}|-) %{GREEDYDATA:syslog5424_msg}" ]  
  type => "udp"
 }
}

output {
 elasticsearch {
  host => "log-01.datacentre.esendex.com"
  type => "udp"
 }
}

