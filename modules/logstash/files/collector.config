input {
 udp {
  port => 514
  type => "udp"
 }
}

filter {
 grok {
  type => "udp"
  patterns_dir => [ "/etc/logstash/files/patterns" ]
  match => [ "message", "<%{NONNEGINT:priority}>%{SYSLOGTSPIX:timestamp} %{HOSTNAME:hostname} : %(%{WORD:app}|-)-(%{WORD:proc}|-)-(%{WORD:msgid}|-): %{WORD:action} %{WORD:protocol} %{WORD} %{WORD:src_interface}:%{IP:src_ip}%{URIPATH}%{NONNEGINT:src_port} %{WORD} %{WORD:dst_interface}:%{IP:dst_ip}%{URIPATH}%{NONNEGINT:dst_port}%{GREEDYDATA:message}" ]
  match => [ "message", "<%{NONNEGINT:priority}>%{SYSLOGTSPIX:timestamp} %{HOSTNAME:hostname} : %(%{WORD:app}|-)-(%{WORD:proc}|-)-(%{WORD:msgid}|-):%{GREEDYDATA:message}" ]
  overwrite => [ "message" ]
  add_tag => [ "syslog" ]
 }
 
}

output {
 elasticsearch {
  host => "log-01.datacentre.esendex.com"
  type => "udp"
 }
}

