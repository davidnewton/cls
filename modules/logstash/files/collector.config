input {
 udp {
  port => 514
  type => "udp"
 }
}

filter {
 grok {
  add_tag => [ "syslog" ]
  patterns_dir => [ "/etc/logstash/files/patterns" ]
  match => [ "message", "<%{NONNEGINT:priority}>%{SYSLOGTSPIX:timestamp} %{HOSTNAME:hostname} : (?:%{WORD:app}|-) (?:%{WORD:proc}|-) (?:%{WORD:msgid}|-) %{GREEDYDATA:message}" ]
  type => "udp"
 }
}

output {
 elasticsearch {
  host => "log-01.datacentre.esendex.com"
  type => "udp"
 }
}

